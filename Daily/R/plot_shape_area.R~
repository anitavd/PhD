pdf("~/PhD/Daily/Article1/Figs/shape_area_bw.pdf")
east <- as.matrix(read.table("~/PhD/Daily/shapeArea/shape_area_east.txt",header=T))
west <- as.matrix(read.table("~/PhD/Daily/shapeArea/shape_area_west.txt",header=T))

#plot(east[1,],ylim=c(-0.5,0.5),type="l",axes =F,xlab=expression(paste("Area [",km^2,"]")), ylab=bquote(xi[a]),col="darkred")
plot(east[1,],ylim=c(-0.5,0.5),type="l",axes =F,xlab=expression(paste("Area [",km^2,"]")), ylab=bquote(xi[a]),col="gray60")
for (i in 2:25) {

	#lines(east[i,],col="darkred")
	lines(east[i,],col="gray60")
}

for (i in 1:25) {

	#lines(west[i,],col="navy")
	lines(west[i,],col="black")
}

abline(h=0,lty="dashed")

axis(1,at=seq(1,7),labels=c(1,360,1520,3480,6240,9800,14160))
axis(2)

#legend(5.5,-0.3,legend=c("Southeast","Southwest"),text.col=c("darkred","navy"),bty="n")
legend(5.5,-0.3,legend=c("Southeast","Southwest"),text.col=c("gray60","black"),bty="n")

dev.off()
